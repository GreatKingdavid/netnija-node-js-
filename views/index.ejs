<!DOCTYPE html>
<html lang="en">
    <%- include('../views/parcials/head.ejs')  %>
    <body>

        <%- include('../views/parcials/nav.ejs') %>


        <div class="blogs content">
            <h1>All blogs</h1>
            <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>

            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>

            <% }) %>
            <% } else { %>
            <p>There are no blogs to display...</p>
            <% } %>

        </div>

            <%- include('../views/parcials/footer.ejs') %>

    </body>
</html>